# ======================
# CONFIGURATION SERVEUR
# ======================
NODE_ENV=development
PORT=3001

# ======================
# BASE DE DONNÉES POSTGRESQL
# ======================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sogara_db
DB_USER=sogara_user
DB_PASSWORD=sogara_password

# Production (URL complète)
# DATABASE_URL=postgresql://user:password@host:5432/database

# ======================
# JWT SECRETS (CRITIQUES - GÉNÉREZ DES VALEURS ALÉATOIRES)
# ======================
# Commande pour générer: openssl rand -base64 32
JWT_SECRET=CHANGEZ_MOI_MINIMUM_32_CARACTERES_ALEATOIRES_ACCESS
JWT_REFRESH_SECRET=CHANGEZ_MOI_MINIMUM_32_CARACTERES_ALEATOIRES_REFRESH
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ======================
# CORS - URLs autorisées (séparées par des virgules)
# ======================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# ======================
# RATE LIMITING
# ======================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# UPLOADS
# ======================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ======================
# EMAIL (optionnel - pour notifications)
# ======================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre-email@gmail.com
SMTP_PASSWORD=votre-mot-de-passe-app
SMTP_FROM=noreply@sogara.ga

# ======================
# LOGS
# ======================
LOG_LEVEL=debug
LOG_FILE=./logs/sogara.log
